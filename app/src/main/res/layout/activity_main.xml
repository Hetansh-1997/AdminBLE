<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_extra_large_20"
        android:layout_marginRight="@dimen/padding_extra_large_20"
        android:background="@color/white_color"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/padding_too_large_30"
            android:paddingBottom="@dimen/padding_too_large_30"
            android:background="@color/white_color"
            >
            <EditText
                android:id="@+id/edit_text_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_too_large_30"
                android:layout_marginLeft="@dimen/padding_too_large_30"
                android:layout_marginRight="@dimen/padding_too_large_30"
                android:hint="@string/user_name"
                android:textColor="@color/black_color"
                android:textColorHint="@color/grey_color"
                />
            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_user_name"
                android:layout_marginTop="@dimen/padding_large_15"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="@dimen/padding_too_large_30"
                android:textColor="@color/black_color"
                android:hint="@string/password"
                android:textColorHighlight="@color/grey_color"
                android:textColorLink="@color/grey_color"
                android:shadowColor="@color/grey_color"
                android:textColorHint="@color/grey_color"
                android:inputType="textPassword"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="@dimen/padding_too_large_30"
                />
            <Button
                android:id="@+id/text_view_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_text_password"
                android:layout_marginTop="@dimen/padding_extra_large_20"
                android:text="@string/login"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:layout_marginLeft="@dimen/padding_50"
                android:layout_marginRight="@dimen/padding_50"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="@dimen/padding_medium_10"
                android:paddingBottom="@dimen/padding_medium_10"
                android:background="@drawable/login_button"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>